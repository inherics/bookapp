<% provide(:title, "ログイン") %>
<div class="background">
  <div class="container">
    <h1>ログイン</h1>

    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for(:session, url: login_path) do |f| %>

        <%= f.label :email, "メールアドレス", class: 'login-text' %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.label :password, "パスワード", class: 'login-text' %>
        <%= link_to "パスワードを忘れた", new_password_reset_path, class: 'login-text' %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>コンピューターにログイン情報を保存しますか？</span>
        <% end %>

        <%= f.submit "ログイン", class: "btn btn-primary", class: 'login-text' %>
        <% end %>

        <div class="other-login">
          <p>
            <%= link_to '/auth/twitter', class: "btn btn-social btn-twitter form-text" do %>
            <i class="fab fa-twitter"></i> Twitterアカウントでログイン
            <% end %>
          </p>
          <p class="facebook">
            <%= link_to '/auth/facebook', class: "btn btn-social btn-facebook form-text" do %>
            <i class="fab fa-facebook-f"></i> Facebookアカウントでログイン
            <% end %>
          </p>
        </div>

          <p class='login-text'>新規登録がまだですか? <%= link_to "始めよう!", signup_path, class: 'login-text' %></p>
      </div>
    </div>
  </div>
</div>
