<% provide(:title, "ユーザー情報編集") %>
<div class="background">
  <div class="container">
    <h1>プロフィールを編集しましょう</h1>

    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :name, "名前", class: 'login-text'%>
        <%= f.text_field :name, class: 'form-control' %>

        <%= f.label :email, "メールアドレス", class: 'login-text' %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.label :password, "パスワード", class: 'login-text' %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.label :password_confirmation, "パスワード確認", class: 'login-text' %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>

        <%= f.submit "保存", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
