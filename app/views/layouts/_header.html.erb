<header>
  <div class="container">
    <div class="header_main">
      <li><p>bookapp</p></li>
      <nav>
        <ul class="header_right">
          <li><%= link_to "ホーム", root_path, :style=>"color:#333;" %></li>
          <% if logged_in? %>
            <li><%= link_to "フォローしている人の投稿", "/static_pages/follow_page", :style=>"color:#333;" %></li>
            <li><%= link_to "マイ投稿", mypage_user_path(@current_user), :style=>"color:#333;" %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                アカウント
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "プロフィール", current_user, :style=>"color:#333;" %></li>
                <li><%= link_to "設定", edit_user_path(current_user), :style=>"color:#333;" %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "ログアウト", logout_path, method: :delete, :style=>"color:#333;" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "ログイン", login_path, :style=>"color:#333;" %></li>
          <% end %>
          <li><%= link_to "bookappとは", about_path, :style=>"color:#333;" %></li>
        </ul>
      </nav>
    </div>
  </div>
</header>
